{
    "dataset": {
        "root_dir": "datasets/everyday_deform/deformations/",
        "obj_list": ["Box"],
        "n_points": 1024,
        "radius": 0.2,
        "k":7,
        "graph_method":"knn"
    },
    "visualization": {
        "collider_radius_contact": 0.1,
        "collider_radius_deform": 0.01,
        "colors": {
            "contact_collider": [0, 0, 1],
            "deform_collider": [1, 1, 0],
            "rest_pcd": [1, 0, 0],
            "def_pcd": [0, 1, 0],
            "lineset": [0.5, 0.5, 0.5],
            "vector": [0, 0, 0]
        }
    },
    "dataloader": {
        "batch_size": 4,
        "shuffle": true
    },
    "training": {
        "n_epochs": 20,
        "learning_rate": 0.0001,
        "model_save_path": "model.pth",
        "lambda_gradient": 0.1
    },
    "network": {
        "input_dims": [3, 6],
        "hidden_dim": 64,
        "output_dim": 3,
        "num_layers": 2,
        "dropout_rate": 0.1,
        "knn_k": 3,
        "backbone": "TAGConv"
    }
}
