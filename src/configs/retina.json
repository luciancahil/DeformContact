{
    "dataset": {
        "name":"retina",
        "root_dir": "../datasets/everyday_deform/deformations/retina",
        "n_points": 1024,
        "radius": 0.15,
        "k":5,
        "graph_method":"knn"
    },
    "visualization": {
        "rigid_radius_contact": 0.1,
        "rigid_radius_deform": 0.01,
        "colors": {
            "contact_rigid": [0, 0, 1],
            "deform_rigid": [1, 1, 0],
            "soft_rest_pcd": [1, 0, 0],
            "soft_def_pcd": [0, 1, 0],
            "lineset": [0.5, 0.5, 0.5],
            "vector": [0, 0, 0]
        }
    },
    "dataloader": {
        "batch_size": 4,
        "shuffle": true
    },
    "training": {
        "n_epochs": 1000,
        "learning_rate": 0.001,
        "model_save_path": "model.pth",
        "lambda_gradient": 1.0,
        "lambda_deformable": 1.0
    },
    "network": {
        "input_dims": [21, 24],
        "hidden_dim": 128,
        "output_dim": 3,
        "encoder_layers":3,
        "decoder_layers":3,
        "dropout_rate": 0.00,
        "knn_k": 7,
        "backbone": "TAGConv"
    }
}
